    <script>
    
    $('#myForm').submit(function(e) {
      var url = "/api/signUp"
      $.ajax({
        url: url,
        method: 'POST',
        dataType: 'json',
        headers: {
          token: '{{token}}'
        },
        data: {
          firstName: $('#firstName').val(),
          lastName: $('#lastName').val(),
          email: $('#email').val(),
          profile: $('#member').val(),
          mobile: $('#mobile').val(),
          dateOfBirth: $('#dobyear option:selected').val() + '/' + $('#dobmonth option:selected').val() +'/' + $('#dobday option:selected').val(),
          password: $('#password').val()
        }
      })
      .done(function(res){
        $('#firstName').val('')
        $('#lastName').val('')
        $('#email').val('')
        $('#member').val('')
        $('#mobile').val('')
        window.location.replace('/members/?token={{token}}')
      })
      e.preventDefault()
    })
