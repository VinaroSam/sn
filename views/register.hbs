<script type="text/javascript">

$('#register').submit(function(e) {
    e.preventDefault()
      var url = "/api/signUp"
      $.ajax({
        url: url,
        method: 'POST',
        dataType: 'json',
        headers: {
          token: '{{token}}'
        },
        data: {
          firstName: $('#firstName').val(),
          lastName: $('#lastName').val(),
          email: $('#email').val(),
          profile: $('#member').val(),
          mobile: $('#mobile').val(),
          dateOfBirth: $('#dobyear option:selected').val() + '/' + $('#dobmonth option:selected').val() +'/' + $('#dobday option:selected').val(), 
          password: $('#password').val()
        }
      })
      .done(function(res){
        window.location.replace('/login')
      })
      
    })
</script>
