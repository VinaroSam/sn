<script>
  $(function(){

    function checkmail(){
      $.ajax({
        url: '/api/mailnumber/',
        method: 'GET',
        dataType: 'json',
        headers: {
          token: '{{token}}'
          }
        })
      .fail(function () {
        console.log('error')
      })
      .done(function(res) {
        console.log(res.number)
        if(res.number > 0){
          $('#newmsg').attr('data-badge', res.number)
        }
        console.log('done');
      });
    }
    checkmail();
    setInterval(checkmail,60*1000);
  })
</script>


