<script type="text/javascript">
  if (localStorage.token === 'undefined') {
    console.log('product : token not defined')
    window.location.replace("/login")
  }
</script>



<main class="mdl-layout__content mdl-color--grey-100">
  <div class="demo-upd mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet mdl-cell--12-col-desktop">

    <div class="innermain">

      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mainheader">Send a message to a member</h2>
      </div>
      <div class="outercontent mdl-color--grey-100">
        <p class="buttonadd">
          <a href="/pnotif/?token={{token}}">
            <button class="mdl-button mdl-js-button mdl-color-text--black-900">
              <i class="material-icons ">folder</i> Mailbox
            </button>
            </a>
        </p>
        <div class="container">
          <form>
          <div class="formgroup col-md-6">
            <div class="form-group">
              <label for="destinataire">SÃ©lectionnez votre destinataire</label>
              <select class="form-control" id="destinataire">
                {{#each clients.users}}
                <option value="{{userUid}}" data-messageto="{{firstName}} {{lastName}}">{{firstName}} {{lastName}}</option>
                {{/each}}
              </select>             
            </div>
            <div class="form-group">
              <label for="corps">Ecrivez votre message</label>
              <textarea class="form-control" id="corps" rows="5"></textarea>
            </div>
            <button id="submit" class="btn mb-2" type="submit" name="button">Envoyer votre message</button>
          </div>
          </form>
          </div>
      </div>
    </div>
  </div>
  <main>




    <script>
    $(function() {
      $('#submit').click(function(event){
        event.preventDefault();
        $.ajax({
          url: '/api/postmail/',
          method: 'POST',
          dataType: 'json',
          headers: {
            token: '{{token}}'
          },
          data: {
            messageSender: "{{userUid}}",
            messageFrom: "{{identity.firstName}} {{identity.lastName}}",
            messageRecipient: $('#destinataire option:selected').val(),
            messageTo: $('#destinataire option:selected').data("messageto"),
            messageBody: $('#corps').val()
            }
          })
        .fail(function () {
          console.log('error')
        })
        .done(function(res) {
          console.log('done');
          window.location.replace("/pnotif/?token={{token}}")
        });
      })
    });

    </script>
    </body>

    </html>
