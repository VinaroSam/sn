<script type="text/javascript">
  if (localStorage.token === 'undefined') {
    console.log('product : token not defined')
    window.location.replace("/login")
  }
</script>



<main class="mdl-layout__content mdl-color--grey-100">
  <div class="demo-upd mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col mdl-cell--8-col-tablet mdl-cell--12-col-desktop">

    <div class="innermain">

      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mainheader">Write a post</h2>
      </div>
      <div class="outercontent mdl-color--grey-100">
        <p class="buttonadd">
          <a href="/pnotif/?token={{token}}">
            <button class="mdl-button mdl-js-button mdl-color-text--black-900">
              <i class="material-icons ">folder</i> Mailbox
            </button>
            </a>
        </p>
        <div class="container">
          <form>
          <div class="formgroup col-md-6">
            <div class="form-group">
              <label for="posttitle">Your post title</label>
                <input type="text" class="form-control" name="posttitle" id="posttitle">
            </div>

            <div class="form-group">
              <label for="postbody">Ecrivez votre post</label>
              <textarea class="form-control" name="postbody" id="postbody" rows="5"></textarea>
            </div>
            <button id="submit" class="btn mb-2" type="submit" name="button">Envoyer votre message</button>
          </div>
          </form>
          </div>
      </div>
    </div>
  </div>
  <main>




    <script>
    $(function() {
      $('#submit').click(function(event){
        event.preventDefault();
        $.ajax({
          url: '/api/createpost/',
          method: 'POST',
          dataType: 'json',
          headers: {
            token: '{{token}}'
          },
          data: {
            // messageSender: "{{userUid}}",
            postAuthor: "{{identity.firstName}} {{identity.lastName}}",
            postTitle: $('#posttitle').val(),
            postBody: $('#postbody').val()
            }
          })
        .fail(function () {
          console.log('error')
        })
        .done(function(res) {
          console.log('done');
          window.location.replace("/feed/?token={{token}}")
        });
      })
    });

    </script>
    </body>

    </html>
