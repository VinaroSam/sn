<div class="container-fluid">
  <div class="row">
    <div class="col-12 text-center">
      <h1>Messages envoyés par les utilisateurs</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Emetteur</th>
            <th scope="col">Message</th>
            <th scope="col">Envoyé</th>
          </tr>
        </thead>
        <tbody>

          {{#each messages}}
            <tr>
              <td>{{messageSender}}</td>
              <td>{{messageBody}}</td>
